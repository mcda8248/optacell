<?xml version="1.0" encoding="UTF-8"?>
<solver>
  <!-- Define the model -->
  <environmentMode>REPRODUCIBLE</environmentMode>
  <solutionClass>icarus.model.TowerSchedule</solutionClass>
  <entityClass>icarus.model.CellTower</entityClass>

  <!-- Define the score function -->
  <scoreDirectorFactory>
    <scoreDefinitionType>HARD_SOFT_DOUBLE</scoreDefinitionType>
      <easyScoreCalculatorClass>icarus.solver.score.CellTowerEasyScoreCalc</easyScoreCalculatorClass>
  </scoreDirectorFactory>

  <!-- Configure the optimization algorithms (optional) -->
  <termination>
    <secondsSpentLimit>30</secondsSpentLimit>
  </termination>
  <constructionHeuristic>
    <constructionHeuristicType>FIRST_FIT</constructionHeuristicType>
  </constructionHeuristic>
  <localSearch>
    <unionMoveSelector>
      <changeMoveSelector/>
      <swapMoveSelector/>
     </unionMoveSelector>
    
    <acceptor>
      <entityTabuSize>7</entityTabuSize>
    </acceptor>
    <forager>
      <acceptedCountLimit>1000</acceptedCountLimit>
    </forager>
     <termination>
      <unimprovedSecondsSpentLimit>5</unimprovedSecondsSpentLimit>
    </termination>
  </localSearch>
</solver>
